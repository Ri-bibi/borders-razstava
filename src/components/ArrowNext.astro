---
// src/components/CardLink.astro
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<div
  class="bg-brand-blue p-4 text-xl text-white font-bold flex items-center w-fit pr-18 overflow-hidden -mr-18"
>
  <a class="max-w-64 underline cursor-pointer" href={href}>
    <slot />
    <!-- This allows content to be passed in -->
  </a>
  <div
    class="border-b-4 border-r-4 border-white aspect-square p-4 -rotate-45 h-24 w-24 -my-8"
  >
  </div>
</div>
