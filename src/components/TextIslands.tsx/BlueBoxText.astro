---
import Image from "astro/components/Image.astro";
import TitleBox from "../TitleBox.astro";
interface Props {
  title: string;
  body: string;
  source: string;
  image: ImageMetadata;
}

const { title, body, image, source } = Astro.props;
---

<div class="w-full py-8 px-4 flex flex-col gap-8">
  <TitleBox title={title} />
  <div class="flex items-center justify-center col-span-2 z-10 px-[10%]">
    <Image src={image} alt="ajow" class="w-full h-full object-contain" />
  </div>
  <div class="flex flex-col gap-8 bg-brand-blue p-8 text-white -mt-56 pt-56">
    <span class="text-justify max-w-prose mx-auto pt-8">
      {body}
    </span>
    <span class="ml-auto font-light text-white">{source}</span>
  </div>
</div>
