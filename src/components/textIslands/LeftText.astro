---
import Image from "astro/components/Image.astro";
import TitleBox from "../TitleBox.astro";
import ImageWraper from "../ImageWraper.astro";
import TextWithYears from "../yearWrapper/TextWithYears";

interface Props {
  title: string;
  body: string;
  source: string;
  image: ImageMetadata;
}

const { title, body, image, source } = Astro.props;
---

<div class="w-full grid md:grid-cols-3 grid-cols-1 py-8 lg:px-4 gap-8">
  <div class="flex flex-col gap-8 w-full px-6">
    <h3 class="text-brand-blue font-bold text-6xl">{title}</h3>
    <div class="relative -ml-8">
      <h3
        class="text-[10rem] font-bold text-brand-blue absolute opacity-10 -mt-37 tracking-widest ml-8"
      >
        {title}
      </h3>
    </div>

    <span class="text-justify lg:max-w-prose px-2 lg:px-0 text-lg">
      <TextWithYears body={body} client:idle />
      <slot />
    </span>
    <span
      class="ml-auto font-light text-brand-beige-dark px-8 lg:px-0 relative"
    >
      {source}
    </span>
  </div>

  <div class="flex items-start justify-center lg:justify-start col-span-2 mt-8">
    <div class="border-4 border-white lg:pt-0 pt-4 z-10 max-w-3xl">
      <ImageWraper>
        <Image
          src={image}
          alt={`${title} image`}
          class="w-full h-full object-contain"
        />
      </ImageWraper>
    </div>
  </div>
</div>
