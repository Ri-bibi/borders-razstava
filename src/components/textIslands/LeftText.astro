---
import Image from "astro/components/Image.astro";
import TitleBox from "../TitleBox.astro";
interface Props {
  title: string;
  body: string;
  source: string;
  image: ImageMetadata;
}

const { title, body, image, source } = Astro.props;
---

<div class="w-full grid md:grid-cols-3 grid-cols-1 py-8 lg:px-4 lg:gap-16">
  <div class="flex flex-col gap-8 w-full">
    <TitleBox title={title} class:list="-ml-8" />

    <span class="text-justify lg:max-w-prose px-8 lg:px-0">
      {body}
    </span>
    <span class="ml-auto font-light text-brand-beige-dark px-8 lg:px-0"
      >{source}</span
    >
  </div>

  <div
    class="bg-gray-50 flex items-center justify-center col-span-2 lg:-mt-48 mt-8 lg:border-4 border-white"
  >
    <Image
      src={image}
      alt={`${title} image`}
      class="w-full h-full object-contain"
    />
  </div>
</div>
