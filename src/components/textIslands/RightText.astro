---
import Image from "astro/components/Image.astro";
import TitleBox from "../TitleBox.astro";
interface Props {
  title: string;
  body: string;
  source: string;
  image: ImageMetadata;
}

const { title, body, image, source } = Astro.props;
---

<div class="w-full grid md:grid-cols-3 grid-cols-1 py-8 lg:px-4 lg:gap-16">
  <div
    class="bg-gray-50 flex items-center justify-center col-span-2 order-2 md:order-0 lg:-mt-48 lg:border-4 border-white"
  >
    <Image
      src={image}
      alt="ajow"
      class="w-full h-full object-contain lg:pt-0 pt-8"
    />
  </div>

  <div class="flex flex-col gap-8">
    <TitleBox title={title} />
    <span class="text-justify max-w-prose px-8 lg:px-0">
      {body}
    </span>
    <span class="font-light text-brand-beige-dark ml-auto lg:ml-0 px-8 lg:px-0"
      >{source}</span
    >
  </div>
</div>
