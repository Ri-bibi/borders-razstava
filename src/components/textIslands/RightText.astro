---
import Image from "astro/components/Image.astro";
import TitleBox from "../TitleBox.astro";
import ImageWraper from "../ImageWraper.astro";
import { extractYears } from "../../utils/yearsHighlite";
import { Year } from "../yearWrapper/yearWrapper";
import TextWithYears from "../yearWrapper/TextWithYears";
interface Props {
  title: string;
  body: string;
  source: string;
  image: ImageMetadata;
}

const { title, body, image, source } = Astro.props;
const bodyExtracted = extractYears(body, Year);
---

<div class="w-full grid md:grid-cols-3 grid-cols-1 py-8 lg:px-4 lg:gap-16">
  <div
    class="flex items-center justify-center col-span-2 order-2 md:order-0 lg:-mt-48 md:-ml-48"
  >
    <div class="border-4 border-white z-10">
      <ImageWraper>
        <Image
          src={image}
          alt="ajow"
          class="w-full h-full object-contain lg:pt-0 pt-8 max-w-2xl"
        />
      </ImageWraper>
    </div>
  </div>

  <div class="flex flex-col gap-8 relative">
    <!-- <TitleBox title={title} /> -->
    <h3 class="text-brand-blue font-bold text-6xl">{title}</h3>

    <h3
      class="text-[12rem] font-bold text-brand-blue absolute opacity-10 ml-2 -mt-48 tracking-widest"
    >
      {title}
    </h3>
    <span class="text-justify max-w-prose px-8 lg:px-0">
      <TextWithYears body={body} client:idle />
    </span>
    <span class="font-light text-brand-beige-dark ml-auto lg:ml-0 px-8 lg:px-0"
      >{source}</span
    >
  </div>
</div>
