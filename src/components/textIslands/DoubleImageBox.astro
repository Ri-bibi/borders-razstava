---
import { Image } from "astro:assets";
import Container from "../../layouts/Container.astro";
import ImageWraper from "../ImageWraper.astro";
interface Props {
  title: string;
  body: string;
  source: string;
  imageLeft: ImageMetadata;
  imageRight: ImageMetadata;
}

const { title, body, imageLeft, imageRight, source } = Astro.props;
---

<div class="w-full py-8 flex flex-col gap-8 relative">
  <div class="px-y flex px-6 max-w-7xl w-full mx-auto">
    <div>
      <h3
        class="text-9xl font-bold text-brand-blue absolute opacity-10 -ml-32 -mb-12"
      >
        {title}
      </h3>
      <h3 class="text-6xl font-bold text-brand-blue">{title}</h3>
    </div>
  </div>

  <div class="w-full flex justify-center">
    <div
      class="flex flex-col items-center justify-center z-10 md:px-[10%] lg:flex-row gap-8 lg:-mx-16 max-w-[130rem]"
    >
      <div class="shadow-xl lg:w-2/3 w-full">
        <ImageWraper>
          <Image
            src={imageLeft}
            alt="Left Image"
            class="w-full h-full object-contain"
          />
        </ImageWraper>
      </div>
      <div class="shadow-xl lg:w-1/3 w-full">
        <ImageWraper>
          <Image
            src={imageRight}
            alt="Right Image"
            class="w-full h-full object-contain"
          />
        </ImageWraper>
      </div>
    </div>
  </div>

  <div class="flex flex-col gap-8 bg-brand-blue p-8 text-white -mt-56 pt-56">
    <span class="text-justify max-w-prose mx-auto pt-8">
      {body}
    </span>
    <span class="ml-auto font-light text-white">{source}</span>
  </div>
</div>
