---
import TitleBox from "../TitleBox.astro";
import Image from "astro/components/Image.astro";
import Sticky from "../UtilLayouts/Sticky.astro";
import Container from "../../layouts/Container.astro";
import TextWithYears from "../yearWrapper/TextWithYears";
interface Props {
  title: string;
  body: string;
  source: string;
  image: ImageMetadata;
}

const { title, body, image, source } = Astro.props;
---

<Sticky>
  <div slot="sticky" class="w-full h-full flex justify-center items-center">
    <!-- <Container> -->
    <div class="flex flex-col w-full h-screen">
      <Image src={image} alt="ajow" class="w-full h-full object-cover" />
    </div>
    <!-- </Container> -->
  </div>
  <div slot="overlay">
    <Container>
      <h3 class="bg-white text-brand-blue px-16 py-4 w-fit text-5xl font-bold">
        {title}
      </h3>
      <div
        class="w-wcreen bg-brand-blue/85 flex justify-center items-center min-h-[120vh]"
      >
        <div class="flex flex-col gap-8 text-white font-bold">
          <span class="text-justify max-w-prose px-8">
            <TextWithYears body={body} client:idle />
          </span>
          <span class="font-light ml-auto px-8 py-2 bg-brand-beige-dark"
            >{source}</span
          >
        </div>
      </div>
    </Container>
  </div>
</Sticky>
