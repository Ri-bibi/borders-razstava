---
import Footer from "../components/footer/Footer.astro";
import BaseHead from "../components/SEO/BaseHead.astro";
import "/src/styles/global.css";
import { getLocale } from "astro-i18n-aut";
import { generateTranslationContent } from "../utils/i18n";

interface Props {
  nofoot?: boolean;
}

const { nofoot } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body class="font-plex">
    <slot />
    {!nofoot && <Footer />}
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
</style>
